# Server Configuration
PORT=8080
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:3000

# Use: openssl rand -hex 32
API_SECRET_KEY=<your-generated-api-key>

# Supabase Configuration
SUPABASE_URL=<your-supabase-url>
SUPABASE_ANON_KEY=<your-supabase-anon-key>

# AI (for enhancement and analysis)
GEMINI_API_KEY=<your-gemini-api-key>

# Reddit API (for enhancement)
REDDIT_CLIENT_ID=<your-reddit-client-id>
REDDIT_CLIENT_SECRET=<your-reddit-client-secret>

# Google Places API (for photos and ratings)
GOOGLE_PLACES_API_KEY=<your-google-places-api-key>

# Score Configuration (all optional, defaults shown)
# Enhancement scores (points added when content is successfully analyzed)
SCORE_ENHANCEMENT_WEBSITE=2
SCORE_ENHANCEMENT_REDDIT=2
SCORE_ENHANCEMENT_WIKIPEDIA=4

# Score bumps (points added for other operations)
SCORE_BUMP_PHOTOS_FETCHED=2
SCORE_BUMP_RATINGS_FETCHED=2
SCORE_BUMP_GENERATED_PLACE_VERIFIED=2

# Source scores (base scores for places from different sources)
SCORE_SOURCE_BASE=1
SCORE_SOURCE_HAS_WIKIPEDIA=2
SCORE_SOURCE_HAS_WEBSITE=2
